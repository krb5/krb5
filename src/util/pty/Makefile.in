SED = sed


.c.o:
	$(CC) $(CFLAGS) -c $(srcdir)/$*.c


LIBOBJS= cleanup.o getpty.o init_slave.o open_ctty.o open_slave.o \
   update_utmp.o update_wtmp.o vhangup.o void_assoc.o pty_err.o logwtmp.o init.o
